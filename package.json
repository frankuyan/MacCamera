{
  "name": "maccamera",
  "version": "1.0.0",
  "description": "Cross-platform webcam recording application for macOS and Linux",
  "main": "dist/main.js",
  "scripts": {
    "start": "NODE_ENV=production electron-forge start",
    "build": "tsc && npm run build:renderer",
    "build:renderer": "cd renderer && npm run build",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "dev": "concurrently \"tsc -w\" \"cd renderer && npm start\" \"wait-on http://localhost:3000 && electron-forge start\"",
    "postinstall": "cd renderer && npm install"
  },
  "keywords": [
    "webcam",
    "recording",
    "electron",
    "cross-platform"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-dmg": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-webpack": "^0.0.2",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^39.1.0",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "MacCamera",
        "executableName": "maccamera",
        "icon": "./assets/icon"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin",
            "linux"
          ]
        },
        {
          "name": "@electron-forge/maker-dmg",
          "config": {
            "format": "ULFO"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        }
      ]
    }
  }
}
